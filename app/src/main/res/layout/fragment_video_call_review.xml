<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.videoCallReview.VideoCallReviewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/ic_bg_login_with_email"
            android:scaleType="centerCrop"
            android:layout_marginBottom="-30dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvThankYouText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvThankYouText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoserif_extrabold"
            android:text="for using Dentify"
            android:textColor="@color/text_color_1_dark_gray"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivThankYouIcon"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ivThankYouIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thank_you_illustration"
            android:layout_marginTop="82dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvThankYouText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:fontFamily="@font/inter_regular"
            android:text="In our effort to always improve ourselves and offer better service, we are grateful for your opinion"
            android:textColor="@color/text_color_1_dark_gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/tvThankYouText2"
            app:layout_constraintStart_toStartOf="@+id/tvThankYouText2"
            app:layout_constraintTop_toBottomOf="@+id/tvThankYouText2" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRatingView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_app_request_item"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/ivBackground">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/robotoserif_extrabold"
                android:text="Rate you experiance"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ivPoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_poor"
                app:layout_constraintEnd_toStartOf="@+id/ivFair"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/ivFair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_fair"
                app:layout_constraintEnd_toStartOf="@+id/ivGood"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivPoor"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <ImageView
                android:id="@+id/ivGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_good"
                app:layout_constraintEnd_toStartOf="@+id/ivVeryGood"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivFair"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <ImageView
                android:id="@+id/ivVeryGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_very_good"
                app:layout_constraintEnd_toStartOf="@+id/ivExcelent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivGood"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <ImageView
                android:id="@+id/ivExcelent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="6dp"
                android:padding="6dp"
                android:src="@drawable/ic_exceptional"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivVeryGood"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />


            <TextView
                android:id="@+id/tvPoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivPoor"
                app:layout_constraintStart_toStartOf="@+id/ivPoor"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:text="1" />

            <TextView
                android:id="@+id/tvFair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivFair"
                app:layout_constraintStart_toStartOf="@+id/ivFair"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:text="2" />

            <TextView
                android:id="@+id/tvGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivGood"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/ivGood"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:text="3" />

            <TextView
                android:id="@+id/tvVeryGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivVeryGood"
                app:layout_constraintStart_toStartOf="@+id/ivVeryGood"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:text="4" />

            <TextView
                android:id="@+id/tvExceptional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/ivExcelent"
                app:layout_constraintStart_toStartOf="@+id/ivExcelent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:text="5" />

            <TextView
                android:id="@+id/tvRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_color_1_dark_gray"
                android:textSize="16sp"
                tools:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                tools:text="4/5 Very Good" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/borderColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRateText" />

            <TextView
                android:id="@+id/tvAddComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_chat_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@color/text_color_2_dark_green"
                android:fontFamily="@font/inter_bold"
                android:text="Add comment"
                android:textColor="@color/text_color_2_dark_green"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etRateComment"
                style="@style/round_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Your comment"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/tvAddComment"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:minHeight="260dp"
                    android:textColor="@color/text_color_1_dark_gray"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnConfirmRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_enable_selector"
            android:fontFamily="@font/inter_bold"
            android:text="Confirm rating"
            android:textAllCaps="false"
            android:paddingVertical="20dp"
            android:textColor="@color/btn_text_enable_selector"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/clRatingView" />


        <Button
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:fontFamily="@font/inter_bold"
            android:stateListAnimator="@null"
            android:text="@string/skip"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_color_2_dark_green"
            android:textSize="16sp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirmRating" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>